<script>
import wepy from 'wepy'
import 'wepy-async-function'

import { setStore } from 'wepy-redux'
import configStore from './store'

const store = configStore()
setStore(store)

export default class extends wepy.app {
  config = {
    pages: [
      'pages/index',
      'pages/personal',
      'pages/mycar'
    ],
    window: {
      backgroundTextStyle: 'light',
      navigationBarBackgroundColor: '#474647',
      navigationBarTitleText: '首页',
      navigationBarTextStyle: 'white'
    },
     tabBar: {
      color: '#a6a6a6',
      selectedColor: '#f8c300',
      list: [
        {
          pagePath: 'pages/index',
          text: '首页',
          iconPath: 'images/gujia_icon_1.png',
          selectedIconPath: 'images/gujia_icon_2.png'
        },
        {
          pagePath: 'pages/personal',
          text: '我的',
          iconPath: 'images/mine_icon_1.png',
          selectedIconPath: 'images/mine_icon_2.png'
        }
      ]
    }
  }

  globalData = {
    userInfo: null
  }

  constructor () {
    super()
    this.use('requestfix')
  }

  onLaunch() {
    this.testAsync()
  }

  sleep (s) {
    return new Promise((resolve, reject) => {
      setTimeout(() => {
        resolve('promise resolved')
      }, s * 1000)
    })
  }

  async testAsync () {
    const data = await this.sleep(3)
    console.log(data)
  }

  getUserInfo(cb) {
    const that = this
    if (this.globalData.userInfo) {
      return this.globalData.userInfo
    }
    wepy.getUserInfo({
      success (res) {
        that.globalData.userInfo = res.userInfo
        cb && cb(res.userInfo)
      }
    })
  }
}
</script>
